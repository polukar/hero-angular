.hero
  width: calc(33% - 30px)
  background-color: #000
  border-radius 12px
  margin-bottom: 30px
  overflow hidden
  margin-right: 30px
  &__img
    max-height 500px
    overflow hidden
  &__img img
    width: 100%;
    margin-bottom: 20px
  &__title
    padding-left 20px
    font-size 24px
    font-family: 'Orbitron', sans-serif
    color #fff
  &__description
    padding-left 20px
    font-size 12px
    font-family: 'Orbitron', sans-serif
    color #fff
    letter-spacing 1px
    padding-bottom 20px
    padding-right: 20px

