.nav
  display flex
  align-items center
  &__link
    font-family: 'Orbitron', sans-serif
    font-size 10px
    color #323232
    text-transform: uppercase
    font-weight: 600
    margin-right: 20px
    letter-spacing 1px
    transition .4s
    cursor pointer
    text-decoration none
    &.active
      color #996bde
    &:hover
      color #996bde
