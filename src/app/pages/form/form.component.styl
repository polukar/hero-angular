h1
  color #fff
  margin-bottom: 50px
  font-size 42px
  font-family: 'Orbitron', sans-serif
  width: 100%

.form-page__wrapper
  max-width 780px
  display flex
  justify-content space-between
  flex-wrap wrap
  margin 0 auto
  font-family: 'Orbitron', sans-serif
  box-sizing border-box

form
  width: calc(50% - 20px)
  padding-right: 20px

.form__pic
  width: calc(50% - 20px)
  max-height 389px
  overflow hidden
  img
    width: 100%;

input
  width: 100%;
  max-width 100%
  height 40px
  margin-top: 10px
  background-color: transparent
  border 2px solid #fff
  padding-left: 15px
  font-size 16px
  color #fff
  transition border .4s
  border-radius 6px
  &:focus
    outline transparent auto 0px
    border-color #996bde
  &[type="text"]
    animation animateInput 5s ease infinite
  &[type="tel"]
    animation animateInput 3.5s ease infinite .3s
  &[type="age"]
    animation animateInput 7s ease infinite 1s


label
  color #fff
  margin-bottom: 30px
  display block

button
  width: 100%;
  max-width: 220px
  color #fff
  height 50px
  margin-top: 20px
  background-color: #996bde
  border none
  font-family: 'Orbitron', sans-serif
  font-weight: 700
  transition .4s
  &:disabled
    background-color: gray
    &:hover
      background-color: gray
      color #fff
  &:hover
    background-color: #fff
    color #996bde

@keyframes animateInput{
  0%{
    box-shadow 0 0 10px 0 rgba(153,107,222,0.4)
  }
  50%{
    box-shadow 5px 5px 20px 0 rgba(153,107,222,0.6)
  }
  100%{
    box-shadow 0 0 10px 0 rgba(153,107,222,0.4)
  }
}

