.di
  display flex
  justify-content flex-start
  flex-wrap: wrap
  margin-right: -30px
  &:after
    content ""
    height 1px
    width: calc(25% - 30px);
    margin-right: 30px
h1
  width: 100%
  color #fff
  font-size 42px
  margin-bottom: 50px

.hero
  width: calc(25% - 30px);
  margin-bottom: 30px
  background-color: #fff
  box-shadow 2px 4px 20px 0 rgba(0,0,0,.4)
  overflow hidden
  margin-right: 30px
  border-radius 8px
  &__img
    overflow hidden
    max-height 500px
  &__title
    padding 15px
    font-size 30px
    color #323232
  &__description
    font-size 11px
    padding-left: 15px;
    padding-right: 15px
    padding-bottom: 30px
img
  width: 100%;
